{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/WorkloadRecommendationsReply",
    "definitions": {
        "Error": {
            "properties": {
                "code": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Error",
            "description": "Error represents an error message"
        },
        "MetricsTimeseriesQuery": {
            "properties": {
                "data_source": {
                    "enum": [
                        "METRICS_DATA_SOURCE_UNSPECIFIED",
                        0,
                        "METRICS",
                        1,
                        "CLOUD_COST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Metrics Data Source"
                },
                "name": {
                    "type": "string",
                    "description": "e.g., \"a\", \"b\""
                },
                "query": {
                    "type": "string",
                    "description": "classic Datadog metrics query"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Metrics Timeseries Query"
        },
        "QueryFormula": {
            "properties": {
                "formula": {
                    "type": "string",
                    "description": "non-empty in app validation"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Query Formula"
        },
        "TimeseriesFormulaRequest": {
            "properties": {
                "spec": {
                    "$ref": "#/definitions/TimeseriesFormulaRequestSpec",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Timeseries Formula Request"
        },
        "TimeseriesFormulaRequestSpec": {
            "properties": {
                "interval": {
                    "pattern": "^([0-9]+\\.?[0-9]*|\\.[0-9]+)s$",
                    "type": "string",
                    "description": "Optional sampling interval.",
                    "format": "regex"
                },
                "formulas": {
                    "items": {
                        "$ref": "#/definitions/QueryFormula"
                    },
                    "type": "array",
                    "description": "Optional formulas to compute."
                },
                "queries": {
                    "items": {
                        "$ref": "#/definitions/TimeseriesQuery"
                    },
                    "type": "array",
                    "description": "At least one query required (validation handled in app layer)."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Timeseries Formula Request Spec",
            "description": "Mirrors TimeseriesFormulaRequestSpec"
        },
        "TimeseriesQuery": {
            "properties": {
                "metrics": {
                    "$ref": "#/definitions/MetricsTimeseriesQuery",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Timeseries Query",
            "description": "Discriminated union: only metrics supported for autoscaling."
        },
        "WorkloadRecommendationReply": {
            "required": [
                "timestamp",
                "targetReplicas"
            ],
            "properties": {
                "error": {
                    "$ref": "#/definitions/Error",
                    "additionalProperties": false,
                    "description": "Error is the error message if new values cannot be calculated"
                },
                "timestamp": {
                    "type": "string",
                    "description": "Timestamp is the time the values were generated",
                    "format": "date-time"
                },
                "targetReplicas": {
                    "type": "integer",
                    "description": "TargetReplicas is the number of replicas the workload should have"
                },
                "lowerBoundReplicas": {
                    "type": "integer",
                    "description": "LowerBoundReplicas is the number of replicas based on lowerBound input"
                },
                "upperBoundReplicas": {
                    "type": "integer",
                    "description": "UpperBoundReplicas is the number of replicas based on upperBound input"
                },
                "observedTargets": {
                    "items": {
                        "$ref": "#/definitions/WorkloadRecommendationTarget"
                    },
                    "additionalProperties": false,
                    "type": "array",
                    "description": "ObservedTargets is the list of observed targets (only the targetValue will be set)"
                },
                "reason": {
                    "type": "string",
                    "description": "Reason explains recommender decision"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Workload Recommendation Reply",
            "description": "WorkloadRecommendationReply represents a recommendation reply"
        },
        "WorkloadRecommendationTarget": {
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Type defines the target value type (e.g. CPU, Memory, custom, etc.)"
                },
                "targetValue": {
                    "type": "number",
                    "description": "TargetValue is the target value of the target"
                },
                "lowerBound": {
                    "type": "number",
                    "description": "LowerBound is the lower bound of the target"
                },
                "upperBound": {
                    "type": "number",
                    "description": "UpperBound is the upper bound of the target"
                },
                "formula": {
                    "$ref": "#/definitions/TimeseriesFormulaRequest",
                    "additionalProperties": false,
                    "description": "Formula is the formula to calculate the target value. Must be set when type = \"ContainerResource\". Otherwise, must be unset."
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Workload Recommendation Target",
            "description": "WorkloadRecommendationTarget represents a target value for a workload"
        },
        "WorkloadRecommendationsReply": {
            "properties": {
                "error": {
                    "$ref": "#/definitions/Error",
                    "additionalProperties": false,
                    "description": "Error is the error message if new values cannot be calculated"
                },
                "recommendations": {
                    "items": {
                        "$ref": "#/definitions/WorkloadRecommendationReply"
                    },
                    "additionalProperties": false,
                    "type": "array",
                    "description": "Recommendations is the list of recommendations"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Workload Recommendations Reply",
            "description": "WorkloadRecommendationsReply represents a list of recommendations"
        }
    }
}